<% if reviews.present? %>
  <div class='area'>
    <div id = "you_search_results">
    <%= title %>
    </div>
    <!-- In search results, display all address book entries that are public -->
    <!-- aswell as the current_user's own relevant reviews,  -->
    <%# reviews.each do |review| %>
    <% reviews.select { |review| review.visible_to?(current_resource) }.each do |review| %>
    <%= render 'review', :review => review %>
    <% end %>
  </div>
<% end %>

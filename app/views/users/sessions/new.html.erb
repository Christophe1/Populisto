  <body>

  <!-- the container div, which holds the back and forward arrows on each side, and the 
  changing images, in the middle -->
  <div id = "carousel">
    <%= image_tag "1.1.png", :id => "rotate_images" %>
    <!-- <img id ="rotate_images" src="assets/1.1.png"/> -->
    <!-- back arrow -->
    <div id = "back">
      <%= image_tag "arrow_back.png" %> 
    <!-- <img src = "assets/arrow_back.png"> -->
  </div>  
  <!-- forward arrow -->
    <div id = "forward">
      <%= image_tag "arrow_forward.png" %>
    <!-- <img src = "assets/arrow_forward.png"></div> -->
   
  </div>
</div>

  <div class="login-page">

      <div class='facebook-section'>
       <!-- <h2><%= I18n.t('sign_in.login_text') %></h2>-->

        <%= fb_login_button(image_tag("Facebook-orig.png")) %>

        <div class='fb-notes'>
          <%= raw I18n.t('sign_in.login_notes') %>
        </div>

        <div class="or-devider">
          <%= I18n.t('sign_in.or') %>
        </div>

      </div>

      <div class='sign-in-section'>

          <%= simple_form_for(User.new, :as => :user, :url => session_path(:user), :html => {}) do |f| %>

            <div class="inputs">
    <%= f.input_field :email, :required => false, :autofocus => true, :placeholder => I18n.t('sign_in.email_address_placeholder') %>
              <br/>
              <%= f.input_field :password, :required => false,  :placeholder => I18n.t('sign_in.password_placeholder') %>
              <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => 'Remember me' %>
            </div>
   </br>
   <span class="actions">

              <%= f.button :submit, I18n.t('sign_in.sign_in_button'), :class => 'btn btn-primary' %>


              <%#= f.button :submit, I18n.t('sign_in.sign_up_button'), :class => 'btn btn-warning' %>
              <%= link_to I18n.t('sign_in.sign_up_button'), new_user_registration_path, :class => "btn btn-warning" %>

          <% end %>
        </span>

          <div class='links'>
   <%= link_to I18n.t('sign_in.forgot_password'), new_user_password_path %>

            <%#= link_to I18n.t('sign_in.sign_up'), new_user_registration_path %>
          </div>

      </div>

  </div>




  <script>

  $('#back').on({
      'click': function () {
          var origsrc = $(rotate_images).attr('src');
          var src = '';
          if (origsrc == '<%= asset_path('3.1.png') %>') src = '<%= asset_path('2.1.png') %>';
          if (origsrc == '<%= asset_path('2.1.png') %>') src = '<%= asset_path('1.1.png') %>';
          if (origsrc == '<%= asset_path('1.1.png') %>') src = '<%= asset_path('1.1.png') %>';
          $(rotate_images).attr('src', src);
      }
  });

  $('#forward').on({
      'click': function () {
          var origsrc = $(rotate_images).attr('src');
          var src = '';
          if (origsrc == '<%= asset_path('1.1.png') %>') src = '<%= asset_path('2.1.png') %>';
          if (origsrc == '<%= asset_path('2.1.png') %>') src = '<%= asset_path('3.1.png') %>';
          if (origsrc == '<%= asset_path('3.1.png') %>') src = '<%= asset_path('3.1.png') %>';
          $(rotate_images).attr('src', src);
      }
  });
  </script>


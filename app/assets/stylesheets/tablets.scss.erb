@media all and (max-width: 1224px) and (min-width: 400px) {
  .header{
    .populisto_logo {width:220px;}
  }
}
@media all and (max-width: 1050px) and (min-width: 400px) {
  .top_bar{
    #menu{zoom:90%;}
  }
}
@media all and (max-width: 980px) and (min-width: 400px) {
  .header{
    .populisto_logo {width:190px;}
    .top_bar{
      #menu{
        zoom:85%;
        width: auto;
        li.blog{display: none;}
      }
    }
  }
  .your_page_infos{
    .span5 h2{font-size: 20px;line-height: 25px;}
    .image_div img{zoom: 80%;}
  }
}
@media all and (max-width: 900px) and (min-width: 400px) {
  .header{
    .populisto_logo {width:190px;padding: 0 5px;}
    .top_bar{
      #menu{
        zoom:80%;
        width: auto;
        li.blog{display: none;}
        li{font-size: 12px;}
      }
    }
  }
  .your_page_infos{
    .span5 h2{font-size: 18px;line-height: 21px;}
    .image_div img{zoom: 60%;}
  }
}
